@using TimApp.Applicaiton.Dto
@model BookTransactionDto


<div class="modal fade" id="ReceiveBookModal-@Model.Id" tabindex="-1" aria-labelledby="ReceiveBookModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-action="ReceiveBook" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Kitap teslim</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" />
                        <label>Kirabın ISBN</label>
                        <input asp-for="RelatedISBN" required readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Müşteri Numarası</label>
                        <input asp-for="RelatedMemberId" required readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Teslim edilecek tarih</label>
                        <input asp-for="DueDate" required readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Teslim edilen tarih</label>
                        <input asp-for="DeliveredDate" required class="form-control" />
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </form>

    </div>
</div>